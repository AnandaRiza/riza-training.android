<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a11639"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <include
      android:id="@+id/vComponentTopbar"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      layout="@layout/component_topbar"/>


   <TextView
       android:id="@+id/tvLabelName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:text="Halaman Profile"
       android:textColor="#ffffff" />

   <ImageView
       android:id="@+id/ivRhaenrya"
       android:layout_width="307dp"
       android:layout_height="356dp"
       android:layout_marginTop="4dp"
       android:src="@drawable/test"
       app:layout_constraintTop_toBottomOf="@id/tvLabelName"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent" />

   <TextView
       android:id="@+id/tvName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_marginHorizontal="10dp"
       android:textColor="#ffffff"
       android:text="Name : Rhaenyra Targaryen "
       app:layout_constraintTop_toBottomOf="@id/ivRhaenrya"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent" />

   <TextView
       android:id="@+id/tvEmail"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_marginHorizontal="10dp"
       android:textColor="#ffffff"
       android:text="Email: rt@gmail.com "
       app:layout_constraintTop_toBottomOf="@id/tvName"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent" />

   <TextView
       android:id="@+id/tvHobby"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_marginHorizontal="10dp"
       android:textColor="#ffffff"
       android:text="Title: Princess of Dragonstone "
       app:layout_constraintTop_toBottomOf="@id/tvEmail"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent" />

   <Button
       android:id="@+id/btnLogout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"
       app:layout_constraintTop_toBottomOf="@id/tvHobby"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:backgroundTint="@color/material_dynamic_secondary10"
       android:text="Logout" />


</androidx.constraintlayout.widget.ConstraintLayout>
